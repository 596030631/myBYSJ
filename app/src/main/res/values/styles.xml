<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="list_main_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">135dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:background">@drawable/shape_circle</item>
        <item name="android:alpha">0.8</item>
    </style>

    <style name="list_layout_one_left">
        <item name="android:layout_width">180dp</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <style name="list_layout_one_right">
        <item name="android:layout_width">180dp</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="node_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:layout_marginLeft">3dp</item>
        <item name="android:textColor">#0A21EE</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <style name="node_temp">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:textColor">#333</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="node_humidity">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">80dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:textColor">#333</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="node_gas">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:textColor">#333</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="node_lamp">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginTop">80dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:textColor">#333</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@drawable/shape_btn_cir</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
